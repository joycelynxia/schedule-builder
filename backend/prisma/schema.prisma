generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id String @id @default(uuid())

  name String
  inviteCode String @unique @default(uuid())

  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())

  userName String
  email String @unique
  password String

  isManager Boolean @default(false)

  companyId String
  company Company @relation(fields: [companyId], references: [id])

  scheduledShifts ScheduledShift[]
  unavailabilityRules UnavailabilityRule[]
  swapRequestsAsRequester ShiftSwapRequest[] @relation("Requester")
  swapRequestsAsRequested ShiftSwapRequest[] @relation("RequestedUser")
  coverBids CoverBid[] @relation("CoverBidder")
}

model ScheduledShift {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id])

  date DateTime
  startTime String
  endTime String

  role String?
  title String?
  note String?

  status ShiftStatus @default(DRAFT)

  swapRequests ShiftSwapRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ShiftStatus {
  DRAFT
  PUBLISHED
}

model UnavailabilityRule {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id])

  startDate DateTime
  endDate DateTime

  // recurrence (flattened)
  frequency RecurrenceFrequency?
  interval Int?
  daysOfWeek Int[] // 0-6 (Sun-Sat)

  //time range flattened
  startTime String?
  endTime String?

  allDay Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum RecurrenceFrequency {
  daily
  weekly
}

model ShiftSwapRequest {
  id String @id @default(uuid())

  shiftId String
  shift ScheduledShift @relation(fields: [shiftId], references: [id], onDelete: Cascade)

  requesterId String
  requester User @relation("Requester", fields: [requesterId], references: [id])

  requestedUserId String? // Optional: for swap requests (null for cover requests)
  requestedUser User? @relation("RequestedUser", fields: [requestedUserId], references: [id])

  status SwapRequestStatus @default(PENDING)

  requestedUserApprovedAt DateTime? // For swaps: partner must agree before manager can approve

  reason String? // Optional reason/message from requester

  coverBids CoverBid[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CoverBid {
  id String @id @default(uuid())

  coverRequestId String
  coverRequest ShiftSwapRequest @relation(fields: [coverRequestId], references: [id], onDelete: Cascade)

  bidderId String
  bidder User @relation("CoverBidder", fields: [bidderId], references: [id])

  status CoverBidStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CoverBidStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SwapRequestStatus {
  PENDING
  APPROVED
  REJECTED
}